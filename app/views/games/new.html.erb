<h1>List a new game</h1>

<div class="container">
  <%= simple_form_for @game do |f| %>
    <%= f.input :name %>
    <%= f.input :genre %>
    <%= f.input :device %>
    <%= f.input :num_players %>
    <%= f.input :pickup_adress,
    input_html: {data: {pickup_adress_autocomplete_target: "address"}},
    wrapper_html: {data: {controller: "pickup-adress-autocomplete", pickup_adress_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
    %>
    <%= f.input :price %>
    <%= f.submit %>
  <% end %>
</div>
